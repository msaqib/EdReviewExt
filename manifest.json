{
    "manifest_version": 3,
    "name": "Educative Reviewer",
    "description": "Checkes for common editorial mistaks in lessons",
    "version": "0.1",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.educative.io/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "/assets/16.png",
        "48": "/assets/48.png",
        "128": "/assets/128.png"
    },
    "action": {
        "default_icon": {
            "16": "/assets/16.png",
            "48": "/assets/48.png",
            "128": "/assets/128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.educative.io/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}